{
	"compilerOptions": {
		"target": "ES2022",
		"module": "esnext",
		"moduleResolution": "bundler",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@product-studio/agents": ["../../packages/agents/src/index.ts"],
			"@product-studio/agents/*": ["../../packages/agents/src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"outDir": "dist"
	},
	"include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx", "src/**/*"],
	"exclude": ["node_modules"]
}
